<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mitchell.helloword.MainActivity">

    <Button
        android:id="@+id/main_textColor_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/main_viewColor_button"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/main_viewColor_button"
        android:layout_marginBottom="55dp"
        android:text="CHANGE TEXT COLOR" />

    <Button
        android:id="@+id/main_viewColor_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_textColor_button"
        android:layout_alignEnd="@+id/main_textString_button"
        android:layout_alignStart="@+id/main_textString_button"
        android:layout_marginBottom="12dp"
        android:text="CHANGE VIEW COLOR" />

    <Button
        android:id="@+id/main_textString_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_viewColor_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Change text string" />

    <TextView
        android:id="@+id/main_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_textString_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="Hi my name is Mitchell!" />

    <EditText
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="false" />

    <Button
        android:id="@+id/main_reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:text="RESET DEFAULT" />

</RelativeLayout>
